  "params": [
    {
      "name": "macs",
      "type": "sql",
      "value": "SELECT devMac from DEVICES"
    },
    {
      "name": "urls",
      "type": "setting",
      "value": "WEBMON_urls_to_check",
      "timeoutMultiplier": true
    }
